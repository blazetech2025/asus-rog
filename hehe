# Function to prompt the user to enter the verification code
prompt_verification_code() {
    local last_sent=$(awk -v ip="$ip_address" '$1 == ip {print $2}' "/usr/local/bin/.vff92h")
    echo ""
    echo -ne "${NEON_BLUE}${DIAMOND} ${WHITE}Enter verification code: ${GOLD}"
    read -e -i "$last_sent" user_code

    # Compare the entered code with the generated code
    if [[ -z "$user_code" || "$user_code" != "$last_sent" ]]; then
        echo ""
        echo -e "${RED}â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—${RESET}"
        echo -e "${RED}â•‘${BG_RED}${WHITE}               ${CROSS_MARK} INVALID CODE - ABORTED ${CROSS_MARK}                ${RESET}${RED}â•‘${RESET}"
        echo -e "${RED}â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${RESET}"
        echo ""
        exit 1
    else
        rm -rf /usr/local/bin/.vff92h
    fi
}

