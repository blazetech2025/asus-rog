echo -e "${ELECTRIC_BLUE}â”‚${GOLD}06${WHITE} ${ARROW} Change Limit          ${ELECTRIC_BLUE}â”‚${GOLD}16${WHITE} ${ARROW} User Limiter $stsl      ${ELECTRIC_BLUE} â”‚${RESET}"
